<script>
var handler = Gmaps.build('Google');
handler.buildMap({ internal: {id: 'multi_overlays multi_markers'}}, function(){
  var markers = handler.addMarkers([
    { lat: 43, lng: 3.5, infowindow: "hello"},
    { lat: 45, lng: 4, infowindow: "hello"},
    { lat: 47, lng: 3.5, infowindow: "hello"},
    { lat: 49, lng: 4, infowindow: "hello"},
    { lat: 51, lng: 3.5, infowindow: "hello"}
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>